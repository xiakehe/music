<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/frame_layout_bg"
    android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_is_play_mode"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_play_list"
        android:scaleType="center"
        android:tint="@color/grey_700_96p"
        android:tintMode="src_in"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_music_queue_title"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_music_queue_title"
        style="@style/black_media"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="25dp"
        android:text="@string/mode_shuffle"
        android:layout_marginStart="@dimen/dp_4"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_is_play_mode"
        app:layout_constraintTop_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_music_queue_delete_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:scaleType="center"
        android:tint="@color/grey_700_96p"
        android:tintMode="src_in"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>