<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/dp_10">


    <ImageView
        android:id="@+id/iv_mine_title_icon_item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/load_err"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/must_listen"
        android:textColor="@color/mine_list_item_text_color"
        android:textSize="@dimen/mini_title_height"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mine_title_icon_item"
        app:layout_constraintLeft_toRightOf="@+id/iv_mine_title_icon_item"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_title_icon_item" />

    <ImageView
        android:id="@+id/iv_mine_right_icon_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_right"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mine_title_icon_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_mine_title_icon_item" />


</android.support.constraint.ConstraintLayout>