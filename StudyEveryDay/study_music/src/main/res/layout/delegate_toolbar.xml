<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/toolbar_bg_normal_color"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:minHeight="48dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp">


    <ImageView
        android:id="@+id/iv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/ic_toolbar_return"/>

    <TextView
        android:id="@+id/left_title"
        style="@style/toolbar_text_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/login" />


    <TextView
        android:id="@+id/toolbar_icon_email"
        style="@style/toolbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_email"
        android:visibility="visible" />

    <TextView
        android:id="@+id/toolbar_icon_setting"
        style="@style/toolbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_setting"
        android:visibility="gone" />

    <TextView
        android:id="@+id/main_title"
        style="@style/write_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true" />

    <TextView
        android:id="@+id/toolbar_icon_time"
        style="@style/toolbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/toolbar_icon_download"
        android:background="@drawable/ic_time"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_icon_download"
        style="@style/toolbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_download"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_icon_search"
        style="@style/toolbar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_search"
        android:visibility="gone" />

    <EditText
        android:id="@+id/toolbar_edit_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/leftLayout"
        android:layout_toStartOf="@+id/toolbar_icon_time"
        android:background="@drawable/toolbar_bg_shape"
        android:drawableStart="@drawable/ic_search_small"
        android:maxLines="1"
        android:textColor="@color/toolbar_et_text_normal_color"
        android:textColorHint="@color/light_gray"
        android:textSize="@dimen/mini_title_height"
        android:visibility="gone" />


</android.support.v7.widget.Toolbar>